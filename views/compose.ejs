<%- include("partials/header") %>

<form id="composeBlog">
  <h2 class="compose-title">Compose</h2>

  <div class="input-group">
    <label for="blogTitle" class="lblInput">Title (Max of 50 characters)</label>
    <input type="text" id="blogTitle" autocomplete="off" name="blogTitle" />
  </div>

  <div class="input-group">
    <label for="postMessage" class="lblInput"
      >Post (Max of 500 characters)</label
    >
    <textarea id="postMessage" name="message"></textarea>
  </div>

  <button class="btn" type="submit">Publish</button>
</form>

